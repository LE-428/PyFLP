    "version": "2.0.0",
    "tasks": [
        {
            "label": "black",
            "type": "shell",
            "command": "black .",
            "problemMatcher": []
        },
        {
            "label": "tests",
            "type": "shell",
            "command": "py.test",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "py -3.9 -m build .",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "docs",
            "type": "shell",
            "command": "cd docs && ./make html",
            "problemMatcher": []
        },
        {
            "label": "mypy",
            "type": "shell",
            "command": "mypy . --no-strict-optional"
        }
    ]
}
