{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "black",
            "type": "shell",
            "command": "black .",
            "problemMatcher": []
        },
        {
            "label": "tests",
            "type": "shell",
            "command": "py.test",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "py -3.9 -m build .",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "docs",
            "type": "shell",
            "command": "mkdocs build",
            "problemMatcher": []
        },
        {
            "label": "run main.py",
            "type": "shell",
            "command": "py -3.9 ./main.py",
            "problemMatcher": []
        }
    ]
}
